/**
 * Implements hook_google_analytics_counter_queue_queue_item_processed().
 */
function statistics_google_analytics_counter_queue_queue_item_processed(GoogleAnalyticsCounterQueueQueueItem $queue_item, $statistics) {
  if (NULL !== $statistics && google_analytics_counter_queue_statistics_allow_update()) {
    // Attempt to lookup the queue item's path source.
    $normalized_path = drupal_lookup_path('source', $queue_item->getPath());
    // If FALSE is returned from `drupal_lookup_path`, assume that the queue
    // item path is already normalized (we hope).
    $normalized_path = FALSE === $normalized_path ? $queue_item->getPath() : $normalized_path;
    if (preg_match('|^node/([0-9]+)?|', $normalized_path, $matches)) {
      $node_id = isset($matches[1]) ? $matches[1] : NULL;
      if (is_numeric($node_id)) {
        $node_id = intval($node_id);
        db_merge('node_counter')
          ->key(array('nid' => $node_id))
          ->fields(array(
            'daycount' => 0,
            'totalcount' => $statistics->totalcount,
            'timestamp' => time(),
          ))
          ->execute();
        watchdog(WATCHDOG_DEBUG, t("Updated Drupal core statistics' {node_counter} table for node @node_id.", array('@node_id' => $node_id)));
      }
    }
  }
}

/**
 * Implements hook_google_analytics_counter_queue_google_analytics_api_query_alter().
 */
function node_google_analytics_counter_queue_google_analytics_api_query_alter(GoogleAnalyticsCounterQueueGoogleApiQuery $query) {
  // TODO: Cleanup and refactor in the future.
  if ('data/ga' === $query->getEndpointPath()) {
    foreach ($query->getParameters() as $parameter) {
      if ('filters' === $parameter->getName()) {
        $filters = array();
        foreach ($parameter->getValue() as $filter_name => $filter_value) {
          if ('ga:pagePath' === $filter_name) {
            $original = $filter_value;
            foreach ($original as $value) {
              _node_google_analytics_counter_queue_generate_node_aliases_for_node_system_path($value);
              $filters = array_merge($filters, $value);
            }
          }
        }

        $param_value = $parameter->getValue();
        if (isset($param_value['ga:pagePath'])) {
          $param_value['ga:pagePath'] = $filters;
          $parameter->setValue($param_value);
        }
      }
    }
  }
}

/**
 * Helper function for retrieving path aliases for a node system path.
 *
 * @param string &$path
 *   A path passed by reference. If the path is a node system path, the returned
 *   value of this variable will be an array containing the node system path and
 *   any URL aliases that might exist for it.
 */
function _node_google_analytics_counter_queue_generate_node_aliases_for_node_system_path(&$path) {
  if (preg_match('|node/([0-9]+)?|', $path, $matches)) {
    $node_id = isset($matches[1]) ? $matches[1] : NULL;
    $original = $path;
    if (is_numeric($node_id)) {
      $node_id = intval($node_id);
      $path = array($path);

      $query = db_select('url_alias', 'a')
        ->fields('a', array('alias'))
        ->condition('a.source', 'node/' . $node_id)
        ->execute();
      while ($row = $query->fetchObject()) {
        $path[] = $row->alias;
      }
    }
  }
}
